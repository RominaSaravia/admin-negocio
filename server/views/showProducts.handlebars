<div class="container-fluid">
  <div class="row">
    <div class="col product-header">
      <h2>Tu lista de productos</h2>
    </div>
  </div>

</div>
<div class="container-fluid product-gallery">

  {{#each product}}
  <div class="col-3">

  <div class="card border-info mb-3 mr-1" style="max-width: 18rem;">
    <div class="card-header">#{{@index}} Producto</div>
    <div class="card-body">
      <h5 class="card-title">{{this.name}}</h5>
      <p class="card-text">{{this.size}}</p>
      <p class="card-text">{{this.style}}</p>
      <p class="card-text">{{this.description}}</p>
    </div>
    <div class="card-footer bg-transparent border-success">${{this.price}}</div>
  </div>

  </div>


    {{/each}}

</div>